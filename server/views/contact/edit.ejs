<%- include ../partials/head.ejs %>

<%- include ../partials/menu.ejs %>

<main class="container">

    <div class="row">
        <div style="margin-left:35%; margin-right:35%;">
            <div class="section-title">
                <h2>Edit<span> Contact</span></h2>
            </div>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the contact title"
                    name="name" 
                    value="<%= contact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Email Id</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Email Address"
                    name="author" 
                    value="<%= contact.email %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Contact Number"
                    name="contact" 
                    value="<%= contact.contact %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">Submit</button>
                
                    <a href="/contact-list" class="btn btn-warning">Cancel</a>

            </form>
        </div>
    </div>


</main>


<%- include ../partials/script.ejs %>