<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Book Title"
                    name="name" 
                    value="<%= book.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Email Id</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the Email Address"
                    name="author" 
                    value="<%= book.email %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Contact</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the Contact Number"
                    name="contact" 
                    value="<%= book.contact %>"
                    required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>